<% layout("layouts/boilerplate") %>

<div class="container d-flex justify-content-center align-items-center" 
     style="min-height: 100vh; background-color: #f0f4f9;">
  <div class="card shadow-lg border-0 p-5" 
       style="width: 38rem; border-radius: 16px;">
       
    <div class="text-center mb-4">
      <div
        style="width: 120px; height: 70px; background-color: #003366; color: #fff; border-radius: 12px; 
               display: flex; align-items: center; justify-content: center; margin: 0 auto; 
               font-size: 1.6rem; font-weight: 700;">
        GTB4CEC
      </div>
      <h3 class="mt-3 fw-bold" style="color: #003366;">Student Signup</h3>
      <p class="text-secondary mb-0" style="font-size: 0.95rem;">Join the LMS portal and start learning today</p>
    </div>

    <!-- Signup Form -->
    <form action="/signup" method="POST" class="signup-box">
      <div class="row">
        <!-- College ID -->
        <div class="mb-3 col-md-6">
          <label for="collegeId" class="form-label fw-semibold" style="color: #003366;">College ID</label>
          <input type="text" class="form-control" id="collegeId" name="collegeId" placeholder="Enter college ID" required />
        </div>

        <!-- Enrollment ID -->
        <div class="mb-3 col-md-6">
          <label for="enrollmentId" class="form-label fw-semibold" style="color: #003366;">Enrollment ID</label>
          <input type="text" class="form-control" id="enrollmentId" name="enrollmentId" placeholder="Enter enrollment ID" required />
        </div>
      </div>

      <div class="row">
        <!-- Full Name -->
        <div class="mb-3 col-md-6">
          <label for="name" class="form-label fw-semibold" style="color: #003366;">Full Name</label>
          <input type="text" class="form-control" id="name" name="name" placeholder="Enter full name" required />
        </div>

        <!-- College Name -->
        <div class="mb-3 col-md-6">
          <label for="collegeName" class="form-label fw-semibold" style="color: #003366;">College Name</label>
          <input type="text" class="form-control" id="collegeName" name="collegeName" placeholder="Enter college name" required />
        </div>
      </div>

      <!-- Passwords -->
      <div class="row">
        <div class="mb-3 col-md-6">
          <label for="password" class="form-label fw-semibold" style="color: #003366;">Create Password</label>
          <input type="password" class="form-control" id="password" name="password" placeholder="New Password" required />
        </div>
        <div class="mb-3 col-md-6">
          <label for="confirmPassword" class="form-label fw-semibold" style="color: #003366;">Confirm Password</label>
          <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password" required />
        </div>
      </div>

      <button type="submit" 
              class="btn w-100 fw-semibold"
              style="background-color: #003366; color: white; border-radius: 10px; 
                     padding: 12px 0; font-size: 1rem;">
        Sign Up
      </button>
    </form>

    <p class="text-center mt-3 mb-0" style="font-size: 0.95rem;">
      Already have an account?
      <a href="/login" class="fw-semibold" style="color: #003366; text-decoration: none;">Login</a>
    </p>
  </div>
</div>
