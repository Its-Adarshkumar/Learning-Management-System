<% layout("layouts/boilerplate") %>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh; background-color: #fff; margin-top: 40px">
  <div class="card shadow-lg border-0 p-5" style="width: 38rem; border-radius: 16px">
    <div class="text-center mb-4">
      <div style="width: 120px; height: 70px; background-color: #003366; color: #fff; border-radius: 12px; display: flex; align-items: center; justify-content: center; margin: 0 auto; font-size: 1.6rem; font-weight: 700">GTB4CEC</div>
      <h3 class="mt-3 fw-bold" style="color: #003366">Welcome Back</h3>
      <p class="text-secondary mb-0" style="font-size: 0.95rem">Login to your LMS account</p>
    </div>

    <!-- Login Form -->
    <form action="/login" method="POST" class="login-box">
      <!-- ID Input -->
      <div class="mb-3">
        <label for="userId" class="form-label fw-semibold" style="color: #003366">Enter ID</label>
        <input type="text" class="form-control" id="userId" name="uniqueId" placeholder="Enter your Enrollment ID or Admin ID" required />
      </div>

      <!-- Password -->
      <div class="mb-4">
        <label for="password" class="form-label fw-semibold" style="color: #003366">Password</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required />
      </div>

      <!-- Login Button -->
      <button type="submit" class="btn w-100 fw-semibold" style="background-color: #003366; color: white; border-radius: 10px; padding: 12px 0; font-size: 1rem">Login</button>
    </form>
  </div>
</div>
