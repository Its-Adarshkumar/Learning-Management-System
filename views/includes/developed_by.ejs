    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        /* --- General Page Styling --- */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f4f7f9; /* Light theme background */
            color: #4a5568; /* Darker text for readability */
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 40px 20px;
        }

        /* --- Main Container & Headings --- */
        .team-section {
            width: 100%;
            max-width: 1200px;
            text-align: center;
        }

        .section-title {
            font-size: 2.5rem;
            color: #1a202c; /* Dark heading color */
            margin-bottom: 15px;
            font-weight: 700;
        }

        .section-subtitle {
            font-size: 1.1rem;
            color: #718096; /* Slightly lighter subtitle color */
            margin-bottom: 50px;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
        }

        /* --- Cards Container --- */
        .cards-container {
            display: flex;
            justify-content: center;
            align-items: stretch; /* Makes cards of uneven content height look same */
            flex-wrap: wrap;
            gap: 30px; /* Space between cards */
        }

        /* --- Individual Developer Card --- */
        .developer-card {
            background-color: #ffffff; /* White card background */
            border-radius: 15px;
            padding: 30px;
            width: 270px;
            display: flex;
            flex-direction: column;
            align-items: center;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1); /* Softer shadow for light theme */
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        /* --- Hover Animation --- */
        .developer-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(56, 189, 248, 0.2); /* Adjusted hover shadow */
        }

        /* --- Card Content Styling --- */
        .card-image img {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid #38bdf8; /* Accent color border */
            margin-bottom: 20px;
        }

        .card-name {
            font-size: 1.4rem;
            color: #1a202c; /* Dark name color */
            font-weight: 600;
            margin-bottom: 5px;
        }

        .card-batch {
            color: #718096; /* Muted batch color */
            font-style: italic;
            margin-bottom: 20px;
        }

        /* --- Social Media Links --- */
        .social-links {
            display: flex;
            gap: 20px;
            margin-top: auto; /* Pushes icons to the bottom */
        }

        .social-links a {
            color: #a0aec0; /* Grey icon color */
            font-size: 1.5rem;
            transition: color 0.3s ease, transform 0.3s ease;
        }

        .social-links a:hover {
            color: #38bdf8;
            transform: scale(1.1);
        }
    </style>
</head>
