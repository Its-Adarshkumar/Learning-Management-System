<% layout('layouts/boilerplate') %>

<style>
  body {
    background-color: #fff;
    font-family: "Segoe UI", sans-serif;
    margin: 0;
    padding: 0;
  }

  /* --- MAIN WRAPPER --- */
  .main-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    background-color: #fff;
    position: relative;
    padding: 2rem;
    transition: all 0.3s ease;
    overflow-x: hidden;
  }

  /* --- BUTTONS --- */
  .top-buttons {
    position: fixed;
    top: 20px;
    right: 20px;
    display: flex;
    flex-direction: column;
    gap: 10px;
    z-index: 1000;
  }

  .action-btn {
    background-color: white;
    border: 1.5px solid #003366;
    color: #003366;
    font-weight: 600;
    border-radius: 8px;
    padding: 0.5rem 1.2rem;
    transition: all 0.3s ease;
    text-decoration: none;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
  }

  .action-btn:hover {
    background-color: #003366;
    color: white;
  }

  /* --- CERTIFICATE --- */
  .certificate-container {
    background: white;
    border: 6px solid #003366;
    border-radius: 16px;
    padding: 3rem 4rem;
    width: 90%;
    max-width: 900px;
    text-align: center;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    box-sizing: border-box;
    margin-top: 5rem;
  }

  .certificate-header {
    color: #003366;
    font-size: 2.2rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .certificate-subtitle {
    font-size: 1.2rem;
    color: #555;
    margin-bottom: 2rem;
  }

  .certificate-body {
    border-top: 2px dashed #003366;
    border-bottom: 2px dashed #003366;
    padding: 2rem 0;
    margin: 2rem 0;
  }

  .cert-name {
    font-size: 2rem;
    font-weight: 700;
    color: #222;
  }

  .cert-text {
    color: #555;
    font-size: 1.1rem;
    margin-top: 0.8rem;
  }

  .cert-course {
    color: #003366;
    font-size: 1.3rem;
    font-weight: 600;
    margin-top: 0.5rem;
  }

  .certificate-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 3rem;
  }

  .signature-block {
    text-align: left;
  }

  .signature-line {
    width: 150px;
    border-top: 2px solid #003366;
    margin-bottom: 4px;
  }

  .signature-name {
    font-weight: 600;
    color: #003366;
  }

  .seal {
    font-size: 3rem;
    color: #003366;
    opacity: 0.6;
  }

  /* --- MOBILE RESPONSIVE --- */
  @media (max-width: 768px) {
    .certificate-container {
      padding: 2rem 1.5rem;
      margin-top: 6rem;
    }

    .certificate-header {
      font-size: 1.6rem;
    }

    .cert-name {
      font-size: 1.5rem;
    }

    .cert-course {
      font-size: 1.1rem;
    }

    .certificate-footer {
      flex-direction: column;
      gap: 1.5rem;
    }

    .signature-block {
      text-align: center !important;
    }

    .top-buttons {
      top: 15px;
      right: 15px;
    }
  }

  /* --- PRINT MODE --- */
  @media print {
    body * {
      visibility: hidden;
    }

    .certificate-container,
    .certificate-container * {
      visibility: visible;
    }

    .certificate-container {
      margin: 0;
      border: none;
      box-shadow: none;
      width: 100%;
      max-width: 100%;
      page-break-inside: avoid;
    }
  }
  /* --- HIDE BUTTONS IN DOWNLOAD / PRINT MODE --- */
@media print, screen and (display-mode: download) {
  .top-buttons {
    display: none !important;
    visibility: hidden !important;
  }
}
/* === HIDE TOP BUTTONS FROM SCREENSHOTS === */
.top-buttons {
  isolation: isolate; /* ensures separate stacking */
}

.top-buttons::before {
  content: "";
  position: absolute;
  inset: 0;
  background: white;
  opacity: 0; /* invisible */
  pointer-events: none;
}

/* Trick html2canvas not to capture them */
.top-buttons {
  transform: translateY(-200vh); /* moves them far off-screen */
  position: absolute;
}

/* But when hovering or in normal DOM, bring back */
body:not(.screenshot-mode) .top-buttons {
  transform: translateY(0);
  position: fixed;
}
/* --- KEEP BUTTONS OUTSIDE CERTIFICATE AREA --- */
.top-buttons {
  position: fixed;
  top: 40px;       /* increase top margin */
  right: 40px;     /* increase side spacing */
  z-index: 1000;
  transform: translateY(-150px); /* pushes them well above certificate */
}

@media (max-width: 768px) {
  .top-buttons {
    top: 30px;
    right: 20px;
    transform: translateY(-100px);
  }
}



</style>

<div class="main-content">
  <!-- Top Right Buttons -->
  <% if (!downloadMode) { %>
  <div class="top-buttons">
    <a href="/download_certificate_image?course=<%= courseName %>" class="action-btn">
      <i class="fa-solid fa-download"></i> Download Certificate
    </a>
    <a href="/certificates" class="action-btn">
      <i class="fa-solid fa-arrow-left"></i> Go Back
    </a>
  </div>
<% } %>


  <!-- Certificate -->
  <div class="certificate-container" id="certificate">
    <div class="certificate-header">Certificate of Completion</div>
    <div class="certificate-subtitle">
      This is to proudly certify that
    </div>

    <div class="certificate-body">
      <div class="cert-name"><%= user.name %></div>
      <div class="cert-text">has successfully completed the course</div>
      <div class="cert-course"><%= courseName %></div>
    </div>

    <div class="certificate-footer">
      <div class="signature-block">
        <div class="signature-line"></div>
        <div class="signature-name">Prof. Pardeep Singh</div>
        <div class="text-secondary">Course Instructor</div>
      </div>

      <div class="seal">
        <i class="fa-solid fa-award"></i>
      </div>

      <div class="signature-block" style="text-align: right">
        <div class="signature-line"></div>
        <div class="signature-name">GTB4CEC LMS</div>
        <div class="text-secondary">Official Seal</div>
      </div>
    </div>
  </div>
</div>
