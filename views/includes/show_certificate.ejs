<% layout('layouts/boilerplate') %>

<style>
  body {
    background-color: #fff;
    font-family: "Segoe UI", sans-serif;
    margin: 0;
    padding: 0;
  }

  /* === MAIN CONTENT === */
  .main-content {
    margin-left: 260px;
    padding: 3rem 2rem;
    min-height: 100vh;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
    transition: all 0.3s ease;
  }

  /* === TOP BUTTONS === */
  .top-buttons {
    position: fixed;
    top: 10px;
    left: 280px; /* aligned after sidebar */
    display: flex;
    flex-direction: row;
    gap: 15px;
    z-index: 9999;
  }

  .action-btn {
    background-color: white;
    border: 1.5px solid #003366;
    color: #003366;
    font-weight: 600;
    border-radius: 8px;
    padding: 0.5rem 1.2rem;
    transition: all 0.3s ease;
    text-decoration: none;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
  }

  .action-btn:hover {
    background-color: #003366;
    color: white;
  }

  /* === CERTIFICATE === */
  .certificate-container {
    background: white;
    border: 6px solid #003366;
    border-radius: 16px;
    padding: 3rem 4rem;
    width: 90%;
    max-width: 900px;
    text-align: center;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    box-sizing: border-box;
    margin-top: 6rem; /* leave space for buttons */
  }

  .certificate-header {
    color: #003366;
    font-size: 2.2rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .certificate-subtitle {
    font-size: 1.2rem;
    color: #555;
    margin-bottom: 2rem;
  }

  .certificate-body {
    border-top: 2px dashed #003366;
    border-bottom: 2px dashed #003366;
    padding: 2rem 0;
    margin: 2rem 0;
  }

  .cert-name {
    font-size: 2rem;
    font-weight: 700;
    color: #222;
  }

  .cert-text {
    color: #555;
    font-size: 1.1rem;
    margin-top: 0.8rem;
  }

  .cert-course {
    color: #003366;
    font-size: 1.3rem;
    font-weight: 600;
    margin-top: 0.5rem;
  }

  .certificate-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 3rem;
    flex-wrap: wrap;
  }

  .signature-block {
    text-align: left;
  }

  .signature-line {
    width: 150px;
    border-top: 2px solid #003366;
    margin-bottom: 4px;
  }

  .signature-name {
    font-weight: 600;
    color: #003366;
  }

  .seal {
    font-size: 3rem;
    color: #003366;
    opacity: 0.6;
  }

  /* === RESPONSIVE === */
  @media (max-width: 992px) {
    .main-content {
      margin-left: 0 !important;
      padding: 5rem 1rem 3rem;
    }

    /* Buttons below toggle on mobile */
    .top-buttons {
      position: static;
      margin: 1rem 0 1.5rem 60px; /* shift right from toggle */
      flex-wrap: wrap;
      justify-content: flex-start;
    }

    .action-btn {
      flex: 1 1 auto;
      min-width: 140px;
      max-width: 180px;
      font-size: 0.9rem;
      padding: 0.45rem 0.8rem;
    }

    .certificate-container {
      padding: 2rem 1rem;
      border-width: 4px;
      width: 95%;
      margin-top: 2rem;
    }

    .certificate-header {
      font-size: 1.6rem;
    }

    .certificate-subtitle {
      font-size: 1rem;
    }

    .cert-name {
      font-size: 1.4rem;
    }

    .cert-text,
    .cert-course {
      font-size: 1rem;
    }

    .certificate-footer {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }

    .seal {
      font-size: 2.3rem;
    }
  }

  /* === PRINT / DOWNLOAD === */
  @media print {
    .top-buttons {
      display: none !important;
    }
  }
  /* === RESPONSIVE FIX for Footer Alignment === */
@media (max-width: 992px) {
  .certificate-footer {
    flex-direction: row !important;
    justify-content: space-between !important;
    align-items: center !important;
    text-align: center;
    flex-wrap: nowrap !important;
    gap: 0 !important;
  }

  .signature-block {
    text-align: center !important;
  }

  .seal {
    font-size: 2.3rem;
    margin: 0 1rem;
  }
}

</style>

<div class="main-content main-wrapper">
  <!-- Buttons (Fixed on Desktop, Safe on Mobile) -->
  <div class="top-buttons">
    <a
      href="/download_certificate_image?course=<%= courseName %>"
      class="action-btn"
    >
      <i class="fa-solid fa-download"></i> Download Certificate
    </a>
    <a href="/certificates" class="action-btn">
      <i class="fa-solid fa-arrow-left"></i> Go Back
    </a>
  </div>

    <!-- Certificate -->
  <div class="certificate-container" id="certificate">
    <!-- Top Logos -->
    <div style="display: flex; justify-content: space-between; align-items: center;">
      <img src="/pictures/lms-logo.jpg" alt="GTB4CEC Logo" style="width: 80px; height: 80px; object-fit: contain;" />
      <div style="text-align: center;">
        <i class="fa-solid fa-award" style="font-size: 70px; color: #003366;"></i>
      </div>
      <img src="/pictures/college-logo.jpg" alt="GTB4CEC Logo" style="width: 80px; height: 80px; object-fit: contain;" />
    </div>

    <!-- Header Text -->
    <div style="margin-top: 1rem; text-align: center;">
      <h2 style="font-size: 1.4rem; margin-bottom: 0.3rem; color: #000; text-transform: uppercase; font-weight: 600;">
        Guru Tegh Bahadur 4<sup>th</sup> Centenary Engineering College
      </h2>
      <p style="margin: 0; font-size: 1rem; color: #333;">
        G-8 Area, Rajouri Garden, New Delhi - 110064
      </p>
      <h3 style="margin-top: 1rem; font-size: 1.2rem; text-decoration: underline;">
        Department of Computer Science and Engineering
      </h3>
    </div>

    <!-- Certificate Title -->
    <h2 style="margin-top: 2rem; text-decoration: underline; font-weight: 600; font-size: 1.3rem;">
      Certificate
    </h2>

    <!-- Certificate Body -->
    <div style="text-align: left; font-size: 1.05rem; line-height: 1.8; margin-top: 1rem; color: #222;">
      <p>
        It is certified that
        <strong><%= user.name %></strong>,
        student of Guru Tegh Bahadur 4<sup>th</sup> Centenary Engineering College,
        enrollment no. <strong><%= user.enrollmentId%></strong> of
        <strong><%= user.batch%></strong> batch has successfully
        participated and completed our
        <strong><%= courseName %></strong> course.
      </p>
    </div>

    <!-- Signatures -->
    <div
      class="certificate-footer"
      style="
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 3rem;
        flex-wrap: wrap;
        text-align: center;
      "
    >
      <div class="signature-block" style="text-align: left;">
        <img
          src="/pictures/hod-sign.jpg"
          alt="Signature"
          style="width: 120px; height: auto; margin-bottom: 0.3rem;"
        />
        <div class="signature-name" style="font-weight: 600;">Pardeep Singh</div>
        <div style="font-size: 0.9rem;">HOD (CSE)</div>
      </div>

      <div class="signature-block" style="text-align: center;">
        <img
          src="/pictures/course-conveyor.jpg"
          alt="course-conveyor"
          style="width: 120px; height: auto; margin-bottom: 0.3rem;"
        />
        <div class="signature-name" style="font-weight: 600;">Dr. Apurva Vashishth</div>
        <div style="font-size: 0.9rem;">Course Conveyor</div>
      </div>

      <div class="signature-block" style="text-align: right;">
        <img
          src="/pictures/director-sign.jpg"
          alt="Signature"
          style="width: 120px; height: auto; margin-bottom: 0.3rem;"
        />
        <div class="signature-name" style="font-weight: 600;">Gurmeet Singh Bali</div>
        <div style="font-size: 0.9rem;">(Director)</div>
      </div>
    </div>
  </div>

</div>
