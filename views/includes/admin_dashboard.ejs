<% layout('layouts/boilerplate') %>
<style>
  body {
    background-color: #f0f2f5;
    font-family: 'Segoe UI', sans-serif;
    overflow-x: hidden;
  }

  .main-content {
    background-color: #f0f2f5;
    min-height: 100vh;
    width: 100%;
  }

  /* === HEADER SECTION === */
  .dashboard-header {
    background-color: #003366;
    color: white;
    border-radius: 12px;
    padding: 2rem;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
  }

  .dashboard-header h2 {
    font-weight: 700;
  }

  .upload-btn {
    background-color: white;
    color: #003366;
    font-weight: 600;
    border: none;
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .upload-btn:hover {
    background-color: #e8f0ff;
    color: #002b5b;
  }

  /* === STATS GRID === */
  .stats-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    margin-top: 1.5rem;
  }

  .stat-card {
    background-color: #ffffff;
    border-radius: 12px;
    text-align: center;
    flex: 1 1 45%;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
    transition: transform 0.2s ease;
  }

  .stat-card:hover {
    transform: translateY(-3px);
  }

  .stat-card i {
    color: #003366;
  }

  .stat-card h5 {
    margin-top: 0.5rem;
    color: #444;
  }

  .stat-card p {
    color: #003366;
    font-weight: 600;
  }

  /* === VIDEOS CARD === */
  .videos-card {
    background-color: #ffffff;
    border-radius: 12px;
    margin-top: 2rem;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
    overflow: hidden;
  }

  .videos-header {
    background-color: #003366;
    color: white;
    padding: 1rem 1.5rem;
  }

  .videos-header h4 {
    margin: 0;
    font-weight: 600;
  }

  .videos-header .btn-outline-secondary {
    background-color: transparent;
    border: 1.5px solid white;
    color: white;
    font-weight: 500;
    border-radius: 8px;
    transition: 0.3s ease;
  }

  .videos-header .btn-outline-secondary:hover {
    background-color: white;
    color: #003366;
  }

  /* === TABLE === */
  table {
    width: 100%;
    border-collapse: collapse;
  }

  th {
    font-weight: 600;
    color: #555;
  }

  td, th {
    padding: 0.75rem 1rem;
    border: none;
  }

  tr {
    background-color: #f9fafb;
    transition: background-color 0.2s ease;
  }

  tr:hover {
    background-color: #ffffff;
  }

  .btn-delete {
    background-color: #dc3545;
    border: none;
    border-radius: 6px;
    color: white;
    font-weight: 500;
    padding: 0.4rem 0.8rem;
    transition: background-color 0.2s ease;
  }

  .btn-delete:hover {
    background-color: #c82333;
  }

  /* === MOBILE FIX === */
  @media (max-width: 768px) {
    .main-content {
      padding: 0.8rem !important;
      margin-left: 0 !important;
      width: 100%;
      overflow-x: hidden;
      margin-top: 4.2rem; /* ensures toggle button not overlapping */
    }

    .dashboard-header {
      text-align: center;
      margin-top: 0.5rem !important;
      border-radius: 10px !important;
    }

    .upload-btn {
      margin-top: 1rem;
      width: 100%;
    }

    .stats-grid {
      flex-direction: column;
      align-items: center;
    }

    .stat-card {
      width: 100%;
    }

    .videos-card {
      margin-top: 1.5rem;
    }

    .videos-header {
      text-align: center;
      flex-direction: column;
      gap: 0.5rem;
    }
  }
</style>

<div class="d-flex">
  <%- include("../includes/admin_sidebar.ejs") %>

  <main class="main-content flex-grow-1 p-4">
    <!-- HEADER -->
    <div class="dashboard-header d-flex justify-content-between align-items-center flex-wrap mb-4">
      <div>
        <h2>Welcome, Admin</h2>
        <p>Hereâ€™s an overview of your uploaded content.</p>
      </div>
      <a href="/video_upload" class="upload-btn btn btn-light mt-2 mt-md-0">
        <i class="fa-solid fa-upload me-2"></i> Upload a Video
      </a>
    </div>

    <!-- STATS -->
    <div class="stats-grid">
      <div class="stat-card p-4">
        <i class="fa-solid fa-video fa-2x mb-2"></i>
        <h5>Total Videos</h5>
        <p class="h5"><%= totalVideos %> Uploaded</p>
      </div>

      <div class="stat-card p-4">
        <i class="fa-solid fa-book fa-2x mb-2"></i>
        <h5>Total Courses</h5>
        <p class="h5"><%= totalCourses.length %> Active Courses</p>
      </div>
    </div>

    <!-- VIDEOS TABLE -->
    <div class="videos-card mt-4">
      <div class="videos-header d-flex justify-content-between align-items-center">
        <h4><i class="fa-solid fa-upload me-2"></i> Uploaded Videos</h4>
        <a href="/admin/dashboard" class="btn btn-outline-secondary btn-sm">
          <i class="fa-solid fa-arrows-rotate me-1"></i> Refresh
        </a>
      </div>

      <div class="table-responsive p-3">
        <table class="table align-middle">
          <thead>
            <tr>
              <th>Course Name</th>
              <th>Topic</th>
              <th>Date</th>
              <th>Edit</th>
            </tr>
          </thead>
          <tbody id="videosTable">
            <% if (videos && videos.length > 0) { %>
              <% videos.forEach(video => { %>
                <tr>
                  <td><%= video.course %></td>
                  <td><%= video.topic %></td>
                  <td><%= video.createdAt.toISOString().split('T')[0] %></td>
                  <td>
                    <form action="/video/delete/<%= video._id %>" method="POST" onsubmit="return confirm('Are you sure?');">
                      <button type="submit" class="btn btn-delete">
                        <i class="fa-solid fa-trash me-1"></i> Delete
                      </button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="4" class="text-center">No videos uploaded yet.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </main>
</div>
