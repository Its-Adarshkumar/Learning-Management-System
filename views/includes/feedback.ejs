<% layout('layouts/boilerplate') %>

<div class="d-flex justify-content-center align-items-center min-vh-100">
  <div class="w-100" style="max-width: 480px;"> <!-- card width controlled -->
    <div class="card shadow-lg border-0">
      <div class="card-body p-4">

        <!-- Go Back Button -->
        <div class="mb-4 text-center">
          <a href="/certificates" class="btn btn-outline-secondary btn-go-back">&larr; Go Back</a>
        </div>

        <!-- Header -->
        <h3 class="card-title mb-2 text-center">Course Feedback</h3>
        <p class="text-center text-muted mb-4">We'd love your feedback on this course!</p>

        <!-- Feedback Form -->
        <form action="/feedback/submit" method="POST">

          <!-- Course Name -->
          <div class="mb-3">
            <label for="courseName" class="form-label">Course Name</label>
            <input type="text" class="form-control" id="courseName" name="courseName" value="WEB DEVELOPMENT" readonly>
          </div>

          <!-- Overall Rating -->
          <div class="mb-3">
            <label class="form-label">Overall Course Rating</label>
            <select class="form-select" name="rating" required>
              <option value="">Select rating</option>
              <option value="5">⭐⭐⭐⭐⭐ Excellent</option>
              <option value="4">⭐⭐⭐⭐ Very Good</option>
              <option value="3">⭐⭐⭐ Good</option>
              <option value="2">⭐⭐ Fair</option>
              <option value="1">⭐ Poor</option>
            </select>
          </div>

          <!-- Course Content Feedback -->
          <div class="mb-3">
            <label class="form-label">How would you rate the course content?</label>
            <select class="form-select" name="contentFeedback" required>
              <option value="">Select option</option>
              <option value="Very Comprehensive">Very Comprehensive</option>
              <option value="Well Structured">Well Structured</option>
              <option value="Average">Average</option>
              <option value="Needs Improvement">Needs Improvement</option>
              <option value="Not Useful">Not Useful</option>
            </select>
          </div>

          <!-- Instructor Performance -->
          <div class="mb-3">
            <label class="form-label">How was the course delivery & explanation?</label>
            <select class="form-select" name="instructorFeedback" required>
              <option value="">Select option</option>
              <option value="Excellent">Excellent</option>
              <option value="Very Good">Very Good</option>
              <option value="Good">Good</option>
              <option value="Fair">Fair</option>
              <option value="Poor">Poor</option>
            </select>
          </div>

          <!-- Additional Comments -->
          <div class="mb-3">
            <label class="form-label">Would you recommend this course to others?</label>
            <select class="form-select" name="recommend" required>
              <option value="">Select option</option>
              <option value="Definitely Yes">Definitely Yes</option>
              <option value="Probably Yes">Probably Yes</option>
              <option value="Not Sure">Not Sure</option>
              <option value="Probably Not">Probably Not</option>
              <option value="Definitely Not">Definitely Not</option>
            </select>
          </div>

          <!-- Submit Button -->
          <div class="d-grid mt-3">
            <button type="submit" class="btn btn-primary btn-lg">Submit Feedback</button>
          </div>

        </form>
      </div>
    </div>
  </div>
</div>

<style>
  body {
    background-color: #f0f0f0;
    font-family: 'Segoe UI', sans-serif;
    margin: 0;
    padding: 0;
  }

  .card {
    border-radius: 1rem;
    overflow: hidden;
  }

  .form-label {
    font-weight: 600;
  }

  .btn-go-back {
    font-size: 1rem;
    padding: 0.5rem 1.2rem;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .card-body {
      padding: 1.5rem;
    }
    .btn-go-back {
      width: 100%;
      font-size: 0.9rem;
      padding: 0.5rem 0;
      margin-bottom: 1rem;
    }
    .d-grid button {
      width: 100%;
    }
  }

  @media (max-width: 576px) {
    h3.card-title {
      font-size: 1.25rem;
    }
    p {
      font-size: 0.9rem;
    }
    .form-control, .form-select {
      font-size: 0.9rem;
    }
  }
</style>
