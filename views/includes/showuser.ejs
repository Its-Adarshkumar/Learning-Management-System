<% layout('layouts/boilerplate') %>

<style>
  body {
    background-color: #f0f2f5;
    font-family: 'Segoe UI', sans-serif;
  }

  .main-content {
    background-color: #f0f2f5;
    min-height: 100vh;
  }

  .dashboard-header {
    background-color: #003366;
    color: white;
    border-radius: 12px;
    padding: 2rem;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
  }

  .dashboard-header h2 {
    font-weight: 700;
  }

  .videos-card {
    background-color: #ffffff;
    border-radius: 12px;
    margin-top: 2rem;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
    overflow: hidden;
  }

  .videos-header {
    background-color: #003366;
    color: white;
    padding: 1rem 1.5rem;
  }

  .videos-header h4 {
    margin: 0;
    font-weight: 600;
  }

  .btn-outline-secondary {
    background-color: transparent;
    border: 1.5px solid white;
    color: white;
    font-weight: 500;
    border-radius: 8px;
    transition: 0.3s ease;
  }

  .btn-outline-secondary:hover {
    background-color: white;
    color: #003366;
  }

  table {
    width: 100%;
    border-collapse: collapse;
  }

  th {
    font-weight: 600;
    color: #555;
  }

  td, th {
    padding: 0.75rem 1rem;
    border: none;
  }

  tr {
    background-color: #f9fafb;
    transition: background-color 0.2s ease;
  }

  tr:hover {
    background-color: #ffffff;
  }

  .btn-delete {
    background-color: #dc3545;
    border: none;
    border-radius: 6px;
    color: white;
    font-weight: 500;
    padding: 0.4rem 0.8rem;
    transition: background-color 0.2s ease;
  }

  .btn-delete:hover {
    background-color: #c82333;
  }
</style>

<div class="d-flex">
  <main class="main-content flex-grow-1 p-4">
    <div class="dashboard-header d-flex justify-content-between align-items-center mb-4">
      <div>
        <h2>See Users</h2>
        <p>View all registered students below.</p>
      </div>
    </div>

    <div class="videos-card mt-4">
      <div class="videos-header d-flex justify-content-between align-items-center">
        <h4><i class="fa-solid fa-users me-2"></i> Registered Users</h4>
        <button onclick="location.reload()" class="btn btn-outline-secondary btn-sm">
          <i class="fa-solid fa-arrows-rotate me-1"></i> Refresh
        </button>
      </div>

      <div class="table-responsive p-3">
        <table class="table align-middle">
          <thead>
            <tr>
              <th>Name</th>
              <th>Batch</th>
              <th>College</th>
              <th>Enrollment ID</th>
              <th>Password (Decrypted)</th>
              <th>Delete</th>
            </tr>
          </thead>
          <tbody>
            <% if (users && users.length > 0) { %>
              <% users.forEach(user => { %>
                <tr>
                  <td><%= user.name %></td>
                  <td><%= user.batch %></td>
                  <td><%= user.collegeName %></td>
                  <td><%= user.enrollmentId %></td>
                  <td><%= user.passwordEncrypted %></td>
                  <td>
                    <form action="/deleteuser/<%= user._id %>" method="POST" style="display:inline;">
                      <button type="submit" class="btn btn-delete">
                        <i class="fa-solid fa-trash me-1"></i> Delete
                      </button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="6" class="text-center text-muted">No registered users found.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </main>
</div>

